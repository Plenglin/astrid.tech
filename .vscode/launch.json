{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch Firefox",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "pwa-chrome",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Gatsby develop",
      "program": "${workspaceFolder}/node_modules/.bin/gatsby",
      "args": ["develop"],
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "action": "openExternally",
        "uriFormat": "http://localhost:8000",
        "pattern": "You can now view"
      }
    }
  ],
  "compounds": [
    {
      "name": "ALL the develops",
      "configurations": ["Launch Firefox", "Gatsby develop"]
    }
  ]
}
